<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back_grey"
    tools:context="in.trujobs.dev.trudroid.JobPreference">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What kind of Jobs you want?"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/white"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textAlignment="center"
                        android:id="@+id/job_pref_one"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/job_pref_one_image_view"
                                android:background="@drawable/edit"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="9dp"
                            android:id="@+id/job_pref_one_text_view"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Add Job Role" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/job_pref_one_remove"
                        android:background="@drawable/wrong"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/job_pref_id_one"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textAlignment="center"
                        android:id="@+id/job_pref_two"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/job_pref_two_image_view"
                                android:background="@drawable/edit"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="9dp"
                            android:id="@+id/job_pref_two_text_view"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Add Job Role" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/job_pref_two_remove"
                        android:background="@drawable/wrong"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/job_pref_id_two"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_margin="8dp"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textAlignment="center"
                        android:id="@+id/job_pref_three"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/job_pref_three_image_view"
                                android:background="@drawable/edit"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="9dp"
                            android:id="@+id/job_pref_three_text_view"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Add Job Role" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:visibility="gone"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:id="@+id/job_pref_three_remove"
                        android:background="@drawable/wrong"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/job_pref_id_three"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- this part will be hidden initially-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/job_role_grid_view_layout"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorPrimary"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Preferred Job Roles"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/white"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="2dp" >

            <GridView
                android:numColumns="3"
                android:gravity="center"
                android:scrollbars="none"
                android:columnWidth="100dp"
                android:stretchMode="columnWidth"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/grid"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_margin="12dp"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:padding="48dp"
        android:id="@+id/job_pref_image_view"
        android:background="@drawable/enter_mobile"/>
</LinearLayout>
