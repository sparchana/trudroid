<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    style="?android:attr/buttonBarStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Years"
                android:paddingRight="16dp"
                android:gravity="right" />
            <NumberPicker
                android:id="@+id/numberPickerYears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/numberPickerMonths"
                android:layout_toRightOf="@+id/numberPickerMonths"
                android:layout_toEndOf="@+id/numberPickerMonths" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.10"
            android:layout_height="wrap_content"
            android:gravity="right"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.45"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Months"/>

            <NumberPicker
                android:id="@+id/numberPickerMonths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/numberPickerMonths"
                android:layout_toRightOf="@+id/numberPickerMonths"
                android:layout_toEndOf="@+id/numberPickerMonths" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/CancelButton_NumberPicker"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textColor="@color/colorPrimary"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/setBtn"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Select" />
    </LinearLayout>

</LinearLayout>