<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="8dp"
    android:paddingTop="6dp"
    android:id="@+id/list_item_linear_layout"
    android:background="@color/white"
    android:gravity="left">

    <LinearLayout
        android:background="@drawable/cust_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:id="@+id/job_color"
                    android:src="@drawable/green_dot"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="42dp"
                android:textSize="16dp"
                android:paddingLeft="4dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/job_post_title_text_view"
                android:text="White Board Driver" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/building"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:paddingLeft="6dp"
                    android:text="NMS Services"
                    android:id="@+id/job_post_company_text_view"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/experience"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="0 yrs"
                    android:id="@+id/job_post_exp_text_view"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="6dp"
                    android:text="(Experience)"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/indian_rupee_icon"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:paddingLeft="6dp"
                    android:text="22,000 per/month"
                    android:id="@+id/job_post_salary_text_view"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/back_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:background="@drawable/rounded_green_button"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:padding="9dp"
                            android:textStyle="bold"
                            android:text="Confirmed"
                            android:id="@+id/confirmed_interview"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:background="@drawable/rounded_orange_button"
                            android:textColor="@color/white"
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:padding="9dp"
                            android:text="Rescheduled"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:id="@+id/rescheduled_interview"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="12dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingBottom="9dp"
                            android:text="Interview date and time"
                            android:id="@+id/interview_schedule_text_view"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/reschedule_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="6dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="4dp"
                                android:layout_width="24dp"
                                android:id="@+id/accept_interview"
                                android:background="@drawable/ic_correct"
                                android:layout_height="24dp" />

                            <TextView
                                android:layout_marginTop="12dp"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Accept"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="4dp"
                                android:layout_width="24dp"
                                android:id="@+id/reject_interview"
                                android:background="@drawable/ic_error"
                                android:layout_height="24dp" />

                            <TextView
                                android:layout_marginTop="12dp"
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reject"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/candidate_status_panel"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="12dp"
                            android:paddingLeft="6dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Current Status:"/>

                            <TextView
                                android:layout_marginLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/current_status"
                                android:text="Not Available"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:layout_marginTop="12dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.75"
                            android:layout_height="wrap_content"
                            android:id="@+id/interview_status_spinner"
                            android:padding="0dp"
                            android:spinnerMode="dropdown">
                        </Spinner>

                        <Button
                            android:layout_marginTop="8dp"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="32dp"
                            android:text="Update"
                            android:id="@+id/update_candidate_status_btn"
                            android:textColor="@color/white"
                            android:background="@drawable/rounded_corner_button" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_directions"
        android:id="@+id/navigate_icon"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

</RelativeLayout>