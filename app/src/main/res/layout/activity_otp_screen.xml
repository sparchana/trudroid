<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.trujobs.dev.trudroid.OtpScreen">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="24dp"
        android:id="@+id/otp_screen_back_arrow"
        android:src="@drawable/back_arrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_weight="0.8">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/enter_otp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#aacde4"
            android:inputType="number"
            android:id="@+id/user_otp_edit_text"
            android:maxLength="4"
            android:paddingTop="60dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:hint="Enter 4 digit OTP" />

        <Button
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Enter OTP"
            android:id="@+id/add_password_btn"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#3c81bf"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:text="Enter the received OTP"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="4dp"
                android:src="@drawable/white_dot"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/white_dot"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
