<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusableInTouchMode="true"
            android:background="@color/back_grey"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">

               <ImageView
                   android:layout_width="16dp"
                   android:layout_height="16dp"
                   android:layout_gravity="center"
                   android:src="@drawable/location"/>

               <AutoCompleteTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/search_jobs_by_place"
                   android:textSize="12dp"
                   android:paddingLeft="8dp"
                   android:focusableInTouchMode="true"
                   android:maxLength="50"
                   android:layout_gravity="center"
                   android:hint="All Bangalore"
                   android:layout_weight="1"/>

           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:focusableInTouchMode="true"
            android:background="@color/back_grey"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight=".2"
                android:layout_gravity="center_vertical"
                android:focusableInTouchMode="true"
                android:background="@color/white"
                android:layout_margin="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/job"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/search_jobs_by_job_role"
                    android:paddingLeft="8dp"
                    android:textSize="12dp"
                    android:maxLength="100"
                    android:text="All Jobs"
                    android:hint="Ex: Driver"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:layout_margin="2dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_job_filter"
                    android:drawablePadding="-24dp"
                    android:layout_gravity="center|right"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/filter"
                    android:text="Filter"
                    android:textColor="@color/back_grey_dark"
                    android:background="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
