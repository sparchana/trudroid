<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:focusableInTouchMode="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="2dp"
                android:layout_weight=".2"
                android:layout_gravity="center_vertical"
                android:background="@drawable/round_white_button"
                android:orientation="horizontal">

               <ImageView
                   android:layout_width="16dp"
                   android:layout_height="16dp"
                   android:layout_margin="8dp"
                   android:layout_gravity="center"
                   android:src="@drawable/location"/>

               <AutoCompleteTextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/search_jobs_by_place"
                   android:textSize="12dp"
                   android:textColor="@color/back_grey_dark"
                   android:background="@android:color/transparent"
                   android:focusableInTouchMode="true"
                   android:maxLength="50"
                   android:layout_gravity="center"
                   android:hint="All Bangalore"
                   android:layout_weight="1"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="8dp"
                    android:padding="2dp"
                    android:id="@+id/clear_location_filter"
                    android:layout_gravity="center"
                    android:src="@drawable/cross"/>
           </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:focusableInTouchMode="true"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight=".86"
                android:layout_gravity="center_vertical"
                android:focusableInTouchMode="true"
                android:background="@drawable/round_white_button"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@drawable/job"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/search_jobs_by_job_role"
                    android:textSize="12dp"
                    android:maxLength="100"
                    android:text="All Jobs"
                    android:hint="Ex: Driver"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="9dp"
                    android:layout_gravity="center"
                    android:id="@+id/edit_job_roles_filter"
                    android:src="@drawable/edit_grey"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".14"
                android:layout_margin="2dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_job_filter"
                    android:textAllCaps="false"
                    android:padding="9dp"
                    android:src="@drawable/filter_not_selected"
                    android:background="@color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
