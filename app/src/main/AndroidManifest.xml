<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.trujobs.dev.trudroid">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <!-- EXTERNAL_STORAGE permissions are optional for Android 6.0 onwards. -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="22" />

    <application
        android:name=".Trudroid"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Google MAP API key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key"/>


        <activity android:name=".JoinNow" />
        <activity android:name=".Login" />
        <activity android:name=".SignUp" />
        <activity android:name=".OtpScreen" />
        <activity android:name=".EnterPassword" />
        <activity android:name=".ForgotPassword" />
        <activity
            android:name=".JobPreference"
            android:label="Job Roles" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DashboardActivity"
            android:label="Candidate Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JobActivity"
            android:label="@string/title_activity_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeLocality"
            android:label="@string/title_activity_home"/>
        <service
            android:name=".FetchAddressIntentService"
            android:exported="false"/>
    </application>

</manifest>